<% include ../partials/header %>
<div class="container  animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">Enter the case number to be deleted:</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/cases/delete" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" min="0" name="case_no" placeholder="Case no" required>   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-success">Submit</button>
                </div>
            </form>
             <a href="/cases"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

