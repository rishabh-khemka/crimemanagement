<% include ../partials/header %>
<div class="container  animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">Case</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/cases/edit/<%=print1[0].case_no%>" method="POST">
                <div class="form-group">
                    <label for="case_no"><strong>Case no:</strong></label>
                    <input class="form-control" id="case_no" type="number" min="0" name="case_no" value="<%= print1[0].case_no%>">   
                </div>
                 <div class="form-group">
                    <label for="case_type"><strong>Case Type:</strong></label>
                    <input class="form-control" id="case_type" type="text" name="case_type" value="<%= print1[0].case_type%>" required>   
                </div>
                <div class="form-group">
                    <label for="p_id"><strong>Police Id:</strong></label>
                    <input class="form-control"id="p_id" type="number" min="0" name="p_id" value="<%= print1[0].p_id%>" required>   
                </div>
                <div class="form-group">
                    <label for="crt_id"><strong>Court Id:</strong></label>
                    <input class="form-control"id="crt_id" type="number" min="0" name="crt_id" value="<%= print1[0].crt_id%>" required>   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-success">Update</button>
                </div>
                
            </form>
            <a href="/cases"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

</body>
