<% include ../partials/header %>
<div class="container  animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">FIR</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/fir/edit/<%=print1[0].fir_no%>" method="POST">
                <div class="form-group">
                     <label for="fir_no"><strong>FIR no:</strong></label>
                    <input class="form-control"type="number" min="0" id="fir_no" name="fir_no"  value="<%= print1[0].fir_no%>">   
                </div>
                 <div class="form-group">
                  <label for="fir_type"><strong>FIR Type:</strong></label>
                    <input class="form-control" type="text" id="fir_type" name="fir_type"  value="<%= print1[0].fir_type%>" required>   
                </div>
                <div class="form-group">
                 <label for="fir_time"><strong>FIR Time:</strong></label>
                    <input class="form-control" type="time" id="fir_time" name="fir_time"  value="<%= print1[0].fir_time%>" required>   
                </div>
                <div class="form-group">
                 <label for="fir_date"><strong>FIR Date:</strong></label>
                    <input class="form-control" type="date"  id="fir_date" name="fir_date"  value="<%= print1[0].fir_date%>" required>   
                </div>
                 <div class="form-group">
                  <label for="fir_ct"><strong>Crime Time:</strong></label>
                    <input class="form-control" type="time" id="fir_ct" name="fir_ct"  value="<%= print1[0].fir_ct%>" required>   
                </div>
                 <div class="form-group">
                  <label for="fir_cp"><strong>Crime place:</strong></label>
                    <input class="form-control" type="text" id="fir_cp" name="fir_cp"  value="<%= print1[0].fir_cp%>" required>   
                </div>
                 <div class="form-group">
                  <label for="fir_suspect"><strong> Crime suspects:</strong></label>
                    <input class="form-control" type="text" id="fir_suspect" name="fir_suspect"  value="<%= print1[0].fir_suspect%>" required>   
                </div>
                 <div class="form-group">
                  <label for="fir_by"><strong> FIR Registered BY:</strong></label>
                    <input class="form-control" type="text" id="fir_by" name="fir_by"  value="<%= print1[0].fir_by%>" required>   
                </div>
                <div class="form-group">
                 <label for="case_no"><strong>Case NO:</strong></label>
                    <input class="form-control" id="case_no" type="number" min="0" name="case_no"  value="<%= print1[0].case_no%>" required>   
                </div>
                <div class="form-group">
                  <label for="ir_desc"><strong>FIR Description:</strong></label>
                    <textarea class="form-control" rows='4' id="fir_desc" name="fir_desc"  value="<%= print1[0].fir_desc%>" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-warning">Update</button>
                </div>
            </form>
            <a href="/fir"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

</body>
