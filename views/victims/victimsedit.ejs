<% include ../partials/header %>
<div class="container animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">Enter the details:</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/victims/edit/<%=print1[0].vic_id%>" method="POST">
                <div class="form-group">
                 <label for="vic_id"><strong>Id:</strong></label>
                    <input class="form-control" type="number"id="vic_id" min="0" name="vic_id" value="<%= print1[0].vic_id%>">   
                </div>
                 <div class="form-group">
                  <label for="vic_name"><strong>Name:</strong></label>
                    <input class="form-control" type="text"id="vic_name" name="vic_name" value="<%= print1[0].vic_name%>" required>   
                </div>
                <div class="form-group">
                <label><strong>SEX:</strong></label><br>
                    <input type="radio" name="sex" value="male" <% if(print1[0].sex==="male"){ %>checked<% } %>> Male
                    <input type="radio" name="sex" value="female" <% if(print1[0].sex==="female"){ %>checked<% } %>> Female
                    <input type="radio" name="sex" value="other" <% if(print1[0].sex==="other"){ %>checked<% } %>> Other
                </div>
                <div class="form-group">
                 <label for="vic_address"><strong>Address:</strong></label>
                    <input class="form-control" type="text"id="vic_address" name="vic_address"value="<%= print1[0].vic_address%>" required>   
                </div>
                <div class="form-group">
                 <label for="vic_mobile"><strong>Mobile No:</strong></label>
                    <input class="form-control" type="number"id="vic_mobile" name="vic_mobile" pattern="[0-9]{10}" maxlength="10" value="<%= print1[0].vic_mobile%>" required>   
                </div>
                <div class="form-group">
                 <label for="fir_no"><strong>Fir No:</strong></label>
                    <input class="form-control" type="number"id="fir_no" min="0" name="fir_no" value="<%= print1[0].fir_no%>" required>   
                </div>
                <div class="form-group">
                <label for="dob"><strong>Date of birth:</strong></label>
                    <input class="form-control" type="date" id="dob"  name="dob" value="<%= print1[0].dob%>"  required>   
                </div>
                <div class="form-group">
                 <label for="pic"><strong>Image:</strong></label>
                    <input class="form-control" type="url" accept="image/*" id="pic"  name="pic" value="<%= print1[0].pic%>"  required>   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-warning">Update</button>
                </div>
                
            </form>
            <a href="/victims"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

</body>
