<% include ../partials/header %>
<div class="container animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">Enter the details:</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/victims/addnew" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" min="0" name="vic_id" placeholder="Victim ID">   
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="vic_name" placeholder="Name" required>   
                </div>
                <div class="form-group">
                    <input type="radio" name="sex" value="male" checked> Male
                    <input type="radio" name="sex" value="female"> Female
                    <input type="radio" name="sex" value="other"> Other
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="vic_address" placeholder="Address" required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="vic_mobile" pattern="[0-9]{10}"  placeholder="Mobile no" required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min="0" name="fir_no" placeholder="FIR no" required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" onfocus="(this.type='date')" placeholder="Date of Birth"  name="dob" required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" accept="image/*" placeholder="Image URL"  name="pic" required>   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-success">Submit</button>
                </div>
                
            </form>
            <a href="/victims"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

</body>
