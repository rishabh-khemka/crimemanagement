<% include ../partials/header %>
<div class="container  animated fadeIn slow" style="margin: 5% auto;text-align:center">
    <h1 style="">Court Records:</h1>
    <br>
    <div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4 align-self-center">
     <form action="/courts/search" method="POST">
                <div class="input-group mb-1">
  <div type="submit" class="input-group-prepend">
    <button  class="input-group-text" id="basic-addon1"><i class="fa fa-search" aria-hidden="true"></i></button>
  </div>
  <input type="text" class="form-control" placeholder="SEARCH" aria-label="Search" name="crt_id1" aria-describedby="basic-addon1">
</div>
                <button class="btn btn-lg btn-block btn-success" hidden>Submit</button>
        </form>
    </div>
        
    </div>
        <br>
    <table border="5"  style="text-align:center;margin: 0px auto" >
    <thead>
        <tr>
            <th>Court ID</th>
            <th>Court Name</th>
            <th>Court Place</th>
            <th>Court Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <%for(i=0; i<print.length; i++){ %>
          <tr>
              <td><a  href="/courts/show/<%= print[i].crt_id%>" style=" text-decoration:none;"><%=print[i].crt_id %></a></td>
            <td><a  href="/courts/show/<%= print[i].crt_id%>" style=" text-decoration:none;color:black"><%= print[i].crt_name%></td>
            <td><a  href="/courts/show/<%= print[i].crt_id%>" style=" text-decoration:none;color:black"><%=print[i].crt_place %></td>
             <td><a  href="/courts/show/<%= print[i].crt_id%>" style=" text-decoration:none;color:black"><%=print[i].crt_type%></td>
              <td><a class="btn btn-info btn-sm py-0 px-2.25" href="/courts/edit/<%= print[i].crt_id%>">edit</a>
             <a class="btn btn-danger btn-sm py-0 px-2 m-1" href="/courts/delete/<%= print[i].crt_id%>">delete</a></td>
        </tr>
         <% } %>
    </tbody>
</table>
<p style="padding-top: 2em"><button type="button" class="btn btn-success"><a style=" text-decoration:none; color:white" href="/courts/addnew">ADD NEW COURT</a></button>
<button type="button" class="btn btn-danger" style="margin-left:2em;"><a style=" color:white; text-decoration:none;" href="/courts/delete">DELETE COURT</a></button></p>
</div>
