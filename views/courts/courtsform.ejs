<% include ../partials/header %>
<div class="container  animated fadeInLeft delay-0.1s">
            <h1 style="text-align:center">Enter the details:</h1>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/courts/addnew" method="POST">
                <div class="form-group">
                    <input class="form-control"type="number" min="0" name="crt_id" placeholder="Court ID">   
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="crt_name" placeholder="Court Name"required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="crt_place" placeholder="Court Place" required>   
                </div>
                 <div class="form-group">
                    <input class="form-control" type="date" name="est" placeholder="Establishment Date"required>   
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="crt_type" placeholder="Court Type"required>   
                </div>
                   <div class="form-group">
                    <input class="form-control" type="url" accept="image/*" name="pic" placeholder="Image URL"   required>   
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block btn-success">Submit</button>
                </div>
                
            </form>
            <a href="/courts"><button class="btn btn-sm btn-outline-dark"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
    </div>
</div>

</body>
